            <display_on>
                <required>0</required>
                <visible>1</visible>
                <label>Display On</label>
                <type>multiselect</type>
                <value>small,medium,large</value>
                <source_model>theextensionlab_megamenu/config_source_display</source_model>
            </display_on>
            <template>
                <required>1</required>
